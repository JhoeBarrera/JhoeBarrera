---
import "../styles/form.css";
---

<form method="POST" action="https://formsubmit.co/jhoebarrera05@outlook.com" class="form">
	<div class="input-container">
		<div class="input-item">
			<label for="email" class="form__label">Correo electr√≥nico</label>
			<input
				type="text"
				id="email"
				name="email"
				autocomplete="off"
				required
				class="form__email"
			/>
		</div>
	</div>
	<div class="textarea-container">
		<div class="textarea-item" class:list="form__label">
			<label for="message" class="form__label">Deje su mensaje</label>
			<textarea id="message" name="message" required class="form__message"></textarea>
		</div>
	</div>
	<input type="hidden" name="_next" value="https://jhoelbarrera.netlify.app/thankYou" />
	<input type="submit" value="Enviar" class="form__button" />
</form>

<script src="../scripts/form.js"></script>
